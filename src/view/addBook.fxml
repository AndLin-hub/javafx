<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddBookController" alignment="center" spacing="10">
    <GridPane vgap="10" hgap="10" >
        <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField  GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="titleTf" />
        <Label text="Author:"  GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField  GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="authorTf"/>
        <Label text="Genre:"  GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField  GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="genreTf"/>
    </GridPane>
        <Text fx:id="AddT" styleClass="feedbackTxt"/>
        <Button text="Add Book" onAction="#handleAdd" />
        <Button text="Close" onAction="#handleExit"/>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
