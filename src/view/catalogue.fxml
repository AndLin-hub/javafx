<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CatalogueController"
      alignment="center" spacing ="10">
    <HBox styleClass="header">
        <ImageView>
            <image>
                <Image 
                    url ="view/UTS.png"
                /> 
            </image>
        </ImageView>
    
        <Label text=" Library System" styleClass="h1"/>
    </HBox>
    <VBox alignment="center" spacing="20" styleClass="footer">
        <Button text="All Books" onAction="#handleAllBooks"/>
        <Button text="Available Books" onAction="#handleAvailableBooks"/>
        <Button text="Books By Genre" onAction="#handleGenre" />
        <Button text="Books By Author" onAction="#handleAuthor"/>
        <Button text="Borrow Books" onAction="#handleBorrow"/>
        <Button text="Return Books" onAction="#handleReturn"/>
        <Button text="Place Books" onAction="#handlePlace"/>
        <Button text="Exit Catalogue" onAction="#handleExit" />
    </VBox>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>