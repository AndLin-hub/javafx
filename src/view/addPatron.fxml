<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="center" fx:controller="controller.AddPatronController">
    <GridPane hgap="10" vgap="10">
        <Label text="Patron ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField  GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="idTf"/>
        <Label text="Patron Name:"  GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField  GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="nameTf"/>
    </GridPane>
    <Text styleClass="feedbackTxt" fx:id="PatronT"/>
    <Button text="Add Patron" onAction="#handleAdd"/>
    <Button text="Close" onAction="#handleExit"/>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>